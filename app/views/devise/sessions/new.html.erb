<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: 'form')) do |f| %>
              <fieldset>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: 'E-mail', type: 'email'%>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Password',
                                       value: '', type: 'password' %>
                </div>

                <div class="checkbox">
                  <label>
                    <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me, type: 'checkbox' %>
                        <%= f.label :remember_me %>
                    <% end %>
                  </label>
                </div>

                <%= f.submit 'Login', class: 'btn btn-lg btn-success btn-block' %>
                <%= render 'devise/shared/links' %>
              </fieldset>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>



